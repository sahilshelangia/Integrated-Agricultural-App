<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FullNews">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="7dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#23BEB6B6"
                android:padding="3dp"
                android:text="TITLE"
                android:textColor="#090909"
                android:textSize="27sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#4ABEB5B5"
                android:padding="3dp"
                android:text="PUBLISHED_DATE"
                android:textColor="#C94511"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#4ABEB5B5"
                android:padding="3dp"
                android:text="SOURCE"
                android:textColor="#EBDB1616"
                android:textSize="20sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#4ABEB5B5"
                android:padding="3dp"
                android:text="LINK"
                android:textColor="#550CC7"
                android:textSize="18sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#4ABEB5B5"
                android:breakStrategy="high_quality"
                android:padding="3dp"
                android:text="SUMMARY"
                android:textColor="#43AC17"
                android:textSize="19sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:autoSizeStepGranularity="2sp"
                android:autoSizeTextType="uniform"
                android:background="#4ABEB5B5"
                android:breakStrategy="high_quality"
                android:lineSpacingExtra="5sp"
                android:padding="3dp"
                android:shadowColor="#D8A3A0A0"
                android:shadowDy="5"
                android:shadowRadius="5"
                android:text="CONTENT"
                android:textColor="#2063C7"
                android:textSize="19sp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>